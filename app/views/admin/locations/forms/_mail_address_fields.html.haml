= field_set_tag do
  .form-group
    = f.label :attention, 'Attention'
    .row
      .col-sm-6
        = f.text_field :attention, maxlength: 255, class: 'form-control'
  .form-group
    = f.label :street, 'Street'
    .row
      .col-sm-6
        = f.text_field :street, class: 'form-control'
  .form-group
    = f.label :city, 'Town'
    .row
      .col-sm-6
        = f.text_field :city, maxlength: 255, class: 'form-control'
  .form-group
    = f.label :postcode, 'Postcode'
    .row
      .col-xs-4
        = f.text_field :postcode, maxlength: 10, class: 'form-control'
  = f.hidden_field :_destroy
  = link_to 'Delete this mailing address permanently', '#', class: 'btn btn-danger delete_association'
