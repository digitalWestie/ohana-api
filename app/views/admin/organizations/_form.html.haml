- if @organization.errors.any?
  .alert.alert-danger
    %h2= "#{pluralize(@organization.errors.count, 'error')} prohibited this organisation from being saved:"
    %ul
      - @organization.errors.full_messages.each do |msg|
        %li= msg

= render 'admin/shared/forms/name', f: f
= render 'admin/shared/forms/alternate_name', f: f
= render 'admin/organizations/forms/date_incorporated', f: f
= render 'admin/organizations/forms/description', f: f
= render 'admin/shared/forms/email', f: f
= render 'admin/organizations/forms/legal_status', f: f
= render 'admin/organizations/forms/tax_id', f: f
= render 'admin/organizations/forms/tax_status', f: f
= render 'admin/organizations/forms/website', f: f

.danger-zone
  %header
    %strong
      Danger Zone
  %h4
    Delete this organisation
  %p
    Once you delete an organisation, there is no going back. Please be certain.
  %p
    = link_to 'Permanently delete this organisation', { action: :confirm_delete_organization, org_id: @organization.id, org_name: @organization.name }, remote: true, data: { toggle: 'modal', target: '#modal-window' }, class: 'boxed-action'
#modal-window.modal.fade{ 'aria-hidden' => 'true', 'aria-labelledby' => 'myModalLabel', 'role' => 'dialog', 'tabindex' => '-1' }

.save-box.navbar-default
  %p
    = 'Editing'
    %strong
      = "#{@organization.name}"
  = f.submit 'Save changes & apply edits to database', class: 'btn btn-success', data: { disable_with: 'Please wait...' }
